<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="3dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        />

    <Button
        android:text="Sign Up!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/BTsignup"
        android:layout_below="@+id/ETphonenumber"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/phoneTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ETphonenumber"
        android:layout_alignStart="@+id/ETphonenumber"
        android:layout_below="@+id/ETconfirm"
        android:layout_marginTop="11dp"
        android:text="Phone Number:"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/confirmTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ETconfirm"
        android:layout_alignStart="@+id/ETconfirm"
        android:layout_below="@+id/ETpassword"
        android:layout_marginTop="10dp"
        android:text="Confirm Password:"
        android:textStyle="bold" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/ETconfirm"
        android:layout_below="@+id/confirmTV"
        android:layout_alignLeft="@+id/ETpassword"
        android:layout_alignStart="@+id/ETpassword" />

    <TextView
        android:id="@+id/passwordTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/unameResponseTV"
        android:layout_alignRight="@+id/unameResponseTV"
        android:layout_below="@+id/ETusername"
        android:layout_marginTop="7dp"
        android:text="Password:"
        android:textStyle="bold" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/ETpassword"
        android:layout_below="@+id/passwordTV"
        android:layout_alignLeft="@+id/ETusername"
        android:layout_alignStart="@+id/ETusername" />

    <TextView
        android:id="@+id/emailTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ETlastname"
        android:layout_alignStart="@+id/ETlastname"
        android:layout_below="@+id/ETlastname"
        android:layout_marginTop="6dp"
        android:text="Email:"
        android:textStyle="bold" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/ETlastname"
        android:layout_below="@+id/lastnameTV"
        android:layout_alignLeft="@+id/ETfirstname"
        android:layout_alignStart="@+id/ETfirstname" />

    <TextView
        android:id="@+id/lastnameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ETlastname"
        android:layout_alignStart="@+id/ETlastname"
        android:layout_below="@+id/ETfirstname"
        android:layout_marginTop="12dp"
        android:text="Last Name:"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/firstnameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/lastnameTV"
        android:layout_alignRight="@+id/lastnameTV"
        android:layout_below="@+id/my_toolbar"
        android:text="First Name:"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/unameResponseTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ETemail"
        android:layout_alignStart="@+id/ETemail"
        android:layout_below="@+id/ETemail"
        android:layout_marginTop="9dp"
        android:text="Username:"
        android:textStyle="bold" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/ETusername"
        android:layout_below="@+id/unameResponseTV"
        android:layout_alignLeft="@+id/firstnameTV"
        android:layout_alignStart="@+id/firstnameTV" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/ETphonenumber"
        android:layout_below="@+id/phoneTV"
        android:layout_alignLeft="@+id/ETconfirm"
        android:layout_alignStart="@+id/ETconfirm"
        android:hint="(###)-###-####"
        android:inputType="phone"
        android:digits="0123456789+"
         />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/ETemail"
        android:layout_below="@+id/emailTV"
        android:layout_alignLeft="@+id/emailTV"
        android:layout_alignStart="@+id/emailTV"
        android:hint="email@email.com" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/ETfirstname"
        android:layout_marginRight="13dp"
        android:layout_marginEnd="13dp"
        android:layout_below="@+id/firstnameTV"
        android:layout_alignRight="@+id/BTsignup"
        android:layout_alignEnd="@+id/BTsignup" />

</RelativeLayout>